<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lineV005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lineV095"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lineV0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/lineV005"
            app:layout_constraintRight_toRightOf="@id/lineV095"
            android:text="@string/text_1"
            android:layout_marginTop="@dimen/dp10"
            />

        <Button
            android:id="@+id/btnSpeak"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp26"
            app:layout_constraintLeft_toLeftOf="@id/lineV005"
            app:layout_constraintRight_toLeftOf="@id/lineV0.5"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            android:layout_marginRight="@dimen/dp10"
            android:text="speak"/>

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp26"
            app:layout_constraintRight_toRightOf="@id/lineV095"
            app:layout_constraintLeft_toRightOf="@id/lineV0.5"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            android:layout_marginLeft="@dimen/dp10"
            android:text="record"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>



